package Test;
import java.util.*;
public class Pattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str="WELCOME";
		int n=str.length();
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n-i;j++)
			{
				System.out.printf("%3c", ' ');
			}
			for(int k=1;k<=i;k++)
			{
				System.out.printf("%3c", str.charAt(n-k));
			}
			System.out.println();
		}
		
	}

}
